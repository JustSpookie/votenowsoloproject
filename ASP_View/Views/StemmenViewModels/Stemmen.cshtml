@model ASP_View.Models.StemmenViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>StemmenViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="StemmenViewModels" asp-action="Stemmen" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="verkiezing.VerkiezingID" />

            <div class="form-group">
                <label asp-for="verkiezing.VerkiezingNaam" class="control-label"></label>
                <p>@Model.verkiezing.VerkiezingNaam</p>
                <span asp-validation-for=@Model.verkiezing.VerkiezingNaam class="text-danger"></span>
            </div>

            <p>Kies kandidaten:</p>
            <div class="form-group">
                @for(int i=0; i<Model.kandidaten.Count; i++)
                {
                    @Html.CheckBoxFor(m=>m.kandidaten[i].Selected);
                     <label >@Model.kandidaten[i].KandidaatNaam</label><br>
                }

            </div>


            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
